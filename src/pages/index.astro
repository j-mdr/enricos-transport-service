---
// layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import Hero from "@components/Hero/HeroSideImage.astro";
import FeatureCardsSmall from "@components/Feature/FeatureCardsSmall.astro";
import ServicesSideImage from "@components/Services/ServicesSideImage.astro";
import TestimonialsSwiper from "@components/Testimonials/TestimonialsSwiper.astro";
import FeatureGalleryMarquee from "@components/Feature/FeatureGalleryMarquee.astro";
import FeatureLightboxMarquee from "@components/Feature/FeatureLightboxMarquee.astro";
import CtaCardCenter from "@components/Cta/CtaCardCenter.astro";
import FaqAccordions from "@components/Faq/FaqAccordions.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData, getLocalizedRoute } from "@js/translationUtils";

// data
const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
const heroHomePageData = getTranslatedData("heroHomePageData", currLocale);

// images
import heroImage from "@assets/images/enrico-in-bestelbus.tiff";

// data
// data
const featureDataList = [
  {
    icon: "tabler/paint",
    title: "Persoonlijk & direct contact",
    text: `Our team of experienced painters uses high-quality materials and techniques to 
      ensure a flawless finish that will last for years to come.`,
  },
  {
    icon: "tabler/heart",
    title: "Flexibel maatwerktransport",
    text: `We believe that everyone deserves a beautifully painted space, and our commitment 
      to affordability reflects our dedication to making that a reality for our valued clients. `,
  },
  {
    icon: "tabler/clock",
    title: "24/7 spoedservice mogelijk",
    text: `We understand that time is of the essence, and we work efficiently to complete your 
      project in a timely manner without compromising quality.`,
  },
  {
    icon: "tabler/list-check",
    title: "Betrouwbare levering",
    text: `We prioritize customer satisfaction and work closely with our clients to ensure that 
      their vision is brought to life.`,
  },
  {
    icon: "tabler/home-heart",
    title: "Kwaliteit",
    text: `We use high-quality materials and techniques to ensure that our paint jobs are 
      durable and long-lasting.`,
  },
  {
    icon: "tabler/wand",
    title: "Vooruitstrevend",
    text: `Our team of skilled painters has an eye for detail and a passion for creating 
      beautiful spaces. We create stunning results that leave our clients thrilled.`,
  },
];
---

<BaseLayout title={siteData.title} description={siteData.description}>
  <Hero
    title={"Koerier in Zwolle – Snel, veilig en flexibel{icon}"}
    description={"Direct inzicht in kosten – helder, snel en zonder verrassingen."}
    buttonText={"Neem contact op"}
    buttonLink={getLocalizedRoute(currLocale, "/contact")}
    image={heroImage}
    imageAlt="Enrico Janssen in bestelbus"
  />
  <!--<ServicesSideImage />-->
  <FeatureCardsSmall title="Onze kernwaarden{icon}" featureDataList={featureDataList} />
  <TestimonialsSwiper />
  <FeatureLightboxMarquee />
  <CtaCardCenter />
  <FaqAccordions />
</BaseLayout>
